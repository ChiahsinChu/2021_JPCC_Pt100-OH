&FORCE_EVAL
  METHOD quickstep
#  STRESS_TENSOR ANALYTICAL

  &DFT
    BASIS_SET_FILE_NAME basis/BASIS_MOLOPT
    POTENTIAL_FILE_NAME basis/GTH_POTENTIALS 
#    CHARGE 1
#    UKS  T
#    WFN_RESTART_FILE_NAME ./pre-opt.wfn
    &MGRID
      CUTOFF 400
      NGRIDS 5
    &END MGRID
    &QS
      EPS_DEFAULT 1.0E-13
      EXTRAPOLATION ASPC 
      EXTRAPOLATION_ORDER 0
    &END QS
    &SCF
      SCF_GUESS RESTART 
      EPS_SCF 3.0E-7
      MAX_SCF 50
      MAX_SCF_HISTORY 5
      CHOLESKY INVERSE_DBCSR
      &OUTER_SCF
         EPS_SCF 1.0E-6
         MAX_SCF 20 
      &END
      &OT
         MINIMIZER DIIS 
         PRECOND_SOLVER INVERSE_UPDATE
         PRECONDITIONER FULL_SINGLE_INVERSE
         STEPSIZE 0.01
#         ENERGY_GAP 0.1
      &END
      &PRINT
        &RESTART
          &EACH
            MD 20 
          &END EACH
        &END RESTART
      &END PRINT
    &END SCF
    &XC
      &XC_FUNCTIONAL PBE
      &END XC_FUNCTIONAL
        &VDW_POTENTIAL
          DISPERSION_FUNCTIONAL PAIR_POTENTIAL
          &PAIR_POTENTIAL
            TYPE DFTD3
            PARAMETER_FILE_NAME basis/dftd3.dat
            R_CUTOFF [angstrom] 12.0
            REFERENCE_FUNCTIONAL PBE
          &END PAIR_POTENTIAL
      &END VDW_POTENTIAL
    &END XC
  &END DFT

  &SUBSYS
    &CELL
      ABC [angstrom]  11.246   11.246   35.940     
      ALPHA_BETA_GAMMA  90 90 90
    &END CELL
    &COORD
       @INCLUDE ./coord.xyz
    &END COORD
    &KIND H
      BASIS_SET DZVP-MOLOPT-SR-GTH
      POTENTIAL GTH-PBE-q1
    &END KIND
    &KIND O
      BASIS_SET DZVP-MOLOPT-SR-GTH
      POTENTIAL GTH-PBE-q6
    &END KIND
    &KIND Pt
      BASIS_SET  DZVP-A5-Q10-323-MOL-T1-DERIVED_SET-1
      POTENTIAL  GTH-PBE-q10
    &END KIND
  &END SUBSYS
&END FORCE_EVAL

&GLOBAL
  PROJECT pt
  RUN_TYPE MD
  PRINT_LEVEL medium
  FLUSH_SHOULD_FLUSH T
  WALLTIME 86000
&END GLOBAL

&MOTION
  &CONSTRAINT
      &FIXED_ATOMS
        LIST  308..371
      &END FIXED_ATOMS
  &END CONSTRAINT
  &MD
    ENSEMBLE LANGEVIN
    &LANGEVIN
      GAMMA 0.001
      NOISY_GAMMA 0
    &END LANGEVIN
    &THERMAL_REGION
      DO_LANGEVIN_DEFAULT TRUE
      FORCE_RESCALING TRUE
      &PRINT
        &TEMPERATURE
        &END
        &LANGEVIN_REGIONS
          FILENAME __STD_OUT__
        &END LANGEVIN_REGIONS
      &END PRINT
      &DEFINE_REGION      # H2O & OH
        TEMPERATURE 330
        NOISY_GAMMA_REGION 2.2E-4
        LIST 1..291
      &END DEFINE_REGION
      &DEFINE_REGION      # Pt
        TEMPERATURE 330
        NOISY_GAMMA_REGION 5E-5
        LIST 292..307  372..387
      &END DEFINE_REGION
    &END THERMAL_REGION
    TIMESTEP 0.5
    STEPS 30000000
    TEMPERATURE 330
    TEMP_KIND .TRUE.
  &END MD
  &PRINT
   &TRAJECTORY
     &EACH
       MD 1
     &END EACH
   &END TRAJECTORY
   &VELOCITIES
     &EACH
       MD 1
     &END EACH
   &END VELOCITIES
   &FORCES ON
     &EACH
       MD 1
     &END EACH
   &END FORCES
   &RESTART_HISTORY
     &EACH
       MD 1000
     &END EACH
   &END RESTART_HISTORY
   &RESTART
     BACKUP_COPIES 3
     &EACH
       MD 1
     &END EACH
   &END RESTART
#   &STRESS
#   &END STRESS
  &END PRINT
&END MOTION

#&EXT_RESTART
#   RESTART_FILE_NAME ./pt-1.restart
##  RESTART_COUNTERS False
#&END EXT_RESTART



